program main
  logical lps
  integer:: lm1(2,3),lm2(2),i,j

  lps = .TRUE.

  lm1(1,1) = 1; lm1(2,1) = -1;
  lm1(1,2) = 1; lm1(2,2) = -1;
  lm1(1,3) = 0; lm1(2,3) = 0;
  do while(lps)
     if(lm1(1,1) .gt. lm1(1,2)) then
        lm2 = lm1(:,1)
        lm1(:,1) = lm1(:,2)
        lm1(:,2) = lm2
        lps = .FALSE.
     end if

     if(lm1(1,2) .gt. lm1(1,3)) then
        lm2 = lm1(:,2)
        lm1(:,2) = lm1(:,3)
        lm1(:,3) = lm2
        lps = .FALSE.
     end if


     if(lm1(2,1) .gt. lm1(2,2)) then
        lm2 = lm1(:,1)
        lm1(:,1) = lm1(:,2)
        lm1(:,2) = lm2
        lps = .FALSE.
     end if

     if(lm1(2,2) .gt. lm1(2,3)) then
        lm2 = lm1(:,2)
        lm1(:,2) = lm1(:,3)
        lm1(:,3) = lm2
        lps = .FALSE.
     end if

     lps = (.NOT. lps)
  end do
write(*,*) lm1
end program main
